<!DOCTYPE html>
<html lang="cs">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Simple Form</title>
	{control css}
</head>

<body>
	<div class="container mt-5">
		<div class="row">
			<div class="col col-md-4 offset-md-4">
				<div n:snippet="flashes">
					<div n:foreach="$flashes as $flash" n:class="alert, 'alert-' . $flash->type">{$flash->message}</div>
				</div>

				{include content}
			</div>
		</div>
	</div>

	{block scripts}
		{control js}

		<script>
			document.addEventListener('DOMContentLoaded', () => naja.initialize({
				history: false,
			}));
		</script>
		{block customJs}{/block}
	{/block}
</body>
</html>

{define datepickerjs}
	{control datepickerjs}
{/define}